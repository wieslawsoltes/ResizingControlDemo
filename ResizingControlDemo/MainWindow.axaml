<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResizingControlDemo"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="678000"
        Width="1000" Height="780"
        WindowStartupLocation="CenterScreen"
        x:Class="ResizingControlDemo.MainWindow"
        Title="Project 1">

  <Grid ColumnDefinitions="200,*,200">
    <local:ToolBoxView EditorCanvas="{Binding #EditorView.EditorCanvas}"
                       Grid.Column="0" />
    <local:EditorView Name="EditorView" 
                      Grid.Column="1" />
    <local:PropertiesView ResizingHostControl="{Binding #EditorView.ResizingHostControl}" 
                          Grid.Column="2" />
  </Grid>

</Window>
